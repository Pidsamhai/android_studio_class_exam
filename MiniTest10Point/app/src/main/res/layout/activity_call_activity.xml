<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivityActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <Button
            android:text="ภาพประจำตัว"
            android:fontFamily="@font/mitr_regular"
            android:background="@drawable/b_pink"
            android:textColor="#ffffff"
            android:onClick="firstActivity"
            android:id="@+id/b_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            android:text="ข้อมูลส่วนตัว"
            android:fontFamily="@font/mitr_regular"
            android:background="@drawable/b_pink"
            android:textColor="#ffffff"
            android:onClick="secondActivity"
            android:id="@+id/b_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:fontFamily="@font/mitr_regular"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:id="@+id/b_back"
        android:text="@string/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>