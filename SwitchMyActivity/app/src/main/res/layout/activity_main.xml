<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/snow"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@color/cover"
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <ImageView
            android:scaleType="centerCrop"
            android:layout_below="@id/cover"
            android:layout_marginTop="-40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/pic"
            android:src="@drawable/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <Button
            android:fontFamily="@font/sarabun_light"
            android:onClick="secondActivity"
            android:layout_marginTop="30dp"
            android:layout_below="@id/pic"
            android:background="@drawable/btn1"
            android:textColor="@color/snow"
            android:layout_centerHorizontal="true"
            android:id="@+id/b_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile" />

        <Button
            android:fontFamily="@font/sarabun_light"
            android:layout_marginTop="10dp"
            android:onClick="thirdActivity"
            android:background="@drawable/btn2"
            android:textColor="@color/snow"
            android:layout_below="@id/b_second"
            android:layout_centerHorizontal="true"
            android:id="@+id/b_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dream" />

        <Button
            android:fontFamily="@font/sarabun_light"
            android:layout_marginTop="10dp"
            android:onClick="fourthActivity"
            android:background="@drawable/btn3"
            android:textColor="@color/snow"
            android:layout_below="@id/b_third"
            android:layout_centerHorizontal="true"
            android:id="@+id/b_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie" />
        <Button
            android:fontFamily="@font/sarabun_light"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:onClick="fifthActivity"
            android:background="@drawable/btn4"
            android:textColor="@color/snow"
            android:layout_below="@id/b_fourth"
            android:layout_centerHorizontal="true"
            android:id="@+id/b_fifth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about" />
    </RelativeLayout>



</ScrollView>